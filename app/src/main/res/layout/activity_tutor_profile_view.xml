<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".TutorProfile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back_arrow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@drawable/ic_round_keyboard_arrow_left_24"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/grey"
                    android:layout_weight="1"
                    android:fontFamily="@font/nunito_semibold"
                    android:gravity="fill"
                    android:text="Profile"
                    android:textSize="23dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="27dp"
            android:backgroundTint="#F0F3F4"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="5dp"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_round_star_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:id="@+id/rating"
                        android:layout_gravity="center"
                        android:fontFamily="@font/nunito_bold"
                        android:textColor="@color/text_blue"
                        android:text="3.5"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center">
                    <ImageView
                        android:layout_width="90dp"
                        android:id="@+id/tutorProfile"
                        android:layout_height="90dp"
                        android:src="@drawable/small_dp_1"
                        />
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="John Smith"
                    android:id="@+id/tutorName"
                    android:textColor="@color/text_blue"
                    android:fontFamily="@font/nunito_semibold"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:textSize="22dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:textAlignment="center"
                    android:id="@+id/tutorBio"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nunito"
                    android:text="@string/long_text"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="7dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_round_location_on_24"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hyderabad"
                        android:id="@+id/tutorLocation"
                        android:fontFamily="@font/nunito_semibold"
                        android:textSize="13dp"
                        android:textColor="@color/text_blue"/>

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Contact info"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="email@gmail.com"
                    android:id="@+id/tutorEmail"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="+91 9090687890 / +91 9090689012"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:id="@+id/tutorPhoneNumber"
                    android:textColor="@color/text_blue"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Qualifications"
                    android:layout_marginTop="30dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="BE CSE at Sri Eshwar College"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:id="@+id/tutorEducation"
                    android:textColor="@color/text_blue"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Experience"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="5 years"
                    android:id="@+id/tutrExperience"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Monthly Rate"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/black"
                    android:textSize="14dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito"
                    android:text="Rs 5000/month"
                    android:id="@+id/tutorRate"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="50dp"
                    android:textColor="@color/text_blue"
                    android:textSize="14dp" />

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="32dp"
                   android:numStars="5"
                    android:secondaryProgressTint="@color/text_blue"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:progressTint="@color/text_blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</ScrollView>